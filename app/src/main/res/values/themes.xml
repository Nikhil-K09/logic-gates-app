<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LogicGates" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryVariant">@color/darkGrey</item>
    </style>

    <style name="Theme.LogicGates" parent="Base.Theme.LogicGates" />
    <!-- Light mode -->
    <!-- screen bg if light mode on -->
    <style name="SCREEN">
        <item name="android:background">@color/frost_white</item>
    </style>
    <!-- text bg if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>
    <!-- button bg if light mode on -->
    <style name="BUTTON">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TOPBAR">
        <item name="android:textColor">#313131</item>
    </style>
    <style name="IMAGEBG">
        <item name="android:background">@color/frost_white</item>
    </style>

    <style name="DESCRIPTION">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="OUTERCARD">
        <item name="android:background">#FFF</item>
    </style>

    <style name="BANNERRCARD">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="CARD">
        <item name="android:textColor">#000</item>
        <item name="android:background">@color/orange</item>
        <item name="backgroundColor">@color/orange</item>
    </style>

</resources>