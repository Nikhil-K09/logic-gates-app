<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LogicGates" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryVariant">@color/darkGrey</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Dark mode -->
    <!-- screen bg if Dark mode on -->
    <style name="SCREEN">
        <item name="android:background">#141218</item>
    </style>
    <!-- text bg if Dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- button bg if Dark mode on -->
    <style name="BUTTON">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">#2A2929</item>
    </style>

    <style name="TOPBAR">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="OUTERCARD">
        <item name="android:background">#FFF</item>
    </style>

    <style name="IMAGEBG">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="DESCRIPTION">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BANNERRCARD">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="SIMBUTTONS">
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SIMRESULT">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/nightGrey</item>
    </style>

    <style name="CARD">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/orange</item>
    </style>

</resources>